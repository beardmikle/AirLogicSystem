{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flutter Web (CanvasKit)",
      "type": "shell",
      "command": "FLUTTER_WEB_RENDERER=canvaskit flutter run -d chrome",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Flutter Web (Release, CanvasKit)",
      "type": "shell",
      "command": "FLUTTER_WEB_RENDERER=canvaskit flutter build web --release --no-tree-shake-icons",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Serve Web Build",
      "type": "shell",
      "command": "cd build/web && python3 -m http.server 8080",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
